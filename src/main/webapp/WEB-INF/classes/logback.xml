<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d | %-5p | %X{playerId}%X{udid} | %t | %c{1} - %m%n
			</pattern>
		</encoder>
	</appender>


	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<file>${lvl6.server.log.location}.log</file>
		<Append>true</Append>
		<Encoding>UTF-8</Encoding>
		<ImmediateFlush>false</ImmediateFlush>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${lvl6.server.log.location}.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d | %-5p | %X{playerId}%X{udid} | %t | %c{1} - %m%n
			</pattern>
		</encoder>
	</appender>


	<appender name="errorfile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<file>${lvl6.server.log.location}_errors.log</file>
		<Append>true</Append>
		<Encoding>UTF-8</Encoding>
		<ImmediateFlush>false</ImmediateFlush>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${lvl6.server.log.location}_errors.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d | %-5p | %X{playerId}%X{udid} | %t | %c{1} - %m%n
			</pattern>
		</encoder>
	</appender>


	<appender name="stash"
		class="net.logstash.logback.appender.LogstashTcpSocketAppender">
		<!-- remoteHost and port are optional (default values shown) -->
		<remoteHost>logs.lvl6.com</remoteHost>
		<port>4560</port>

		<!-- encoder is required -->
		<encoder class="net.logstash.logback.encoder.LogstashEncoder" >
			<customFields>{"environment":"${logstash.environment}"}</customFields>
		</encoder>
		<keepAliveDuration>15 minutes</keepAliveDuration>
	</appender>

	<!-- <logger name="com.lvl6.scheduledtasks" level="DEBUG" additivity="false"> 
		<appender-ref ref="file" /> </logger> -->
	<logger name="com.hazelcast" level="all" additivity="true" />
	<logger name="org.hazelcast" level="all" additivity="true" />

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="errorfile" />
		<appender-ref ref="stash" />
	</root>
</configuration>